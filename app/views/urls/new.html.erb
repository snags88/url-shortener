<div class="shorten-background">
  <div class="container">
    <div class="center" id="shorten-form">
      <div class="title">
        <h1>Shorten the URL</h1>
      </div>
      <div class="form">
        <%= form_for @url, remote: true do |f| %>
          <div class="form-group">
            <%= f.text_field :original, :class => "input-lg col-sm-12", :placeholder => "Enter URL here..." %>

          <%= f.submit "Shorten!", :class => "url_submit" %>
          </div>
        <%- end -%>
      </div>
    </div>

    <div id="shortened_url"></div>
  </div>
</div>

<div class="ranking-background">
  <div class="container">
    <h2>Top 100 URLs</h2>

    <ol>
      <%= render partial: 'urls/top100', collection: @urls, as: :url  %>
    </ol>
  </div>
</div>
