<div class="shorten-background">
  <div class="container vertical-center">
    <div class="center" id="shorten-form">
      <div class="title" id="shorten-title">
        <h1>Enter stuff here, watch magic happen</h1>
      </div>
      <div class="form">
        <%= render 'urls/form', url: @url %>
      </div>
    </div>
  </div>
</div>

<div class="ranking-background">
  <div class="container">
    <div id="top-100">
      <div class="title center" id="ranking-title">
        <h2>Top 100 URLs</h2>
      </div>
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Original Link</th>
            <th>Shortened Link</th>
            <th>View Count</th>
          </tr>
        </thead>
        <tbody>
        <%= render partial: 'urls/top100', collection: @urls, as: :url  %>
        </tbody>
      </table>
    </div>
  </div>
</div>
